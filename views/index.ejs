<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
       
        <form action="/create" method="post">
          <input class="block outline-none px-5 py-2 w-full rounded-md bg-zinc-800" type="text" placeholder="Title goes here .. "name="title"/>

          <textarea
            class="block outline-none mt-3 px-5 py-2 w-full rounded-md resize-none bg-zinc-800" placeholder="description here .. " name ="details"></textarea>
          <input
            class="mt-2 bg-orange-600 px-5 py-2 rounded-md"
            type="submit"
            value="create Task"
          />
        </form>
        <div class="tasks p-10 flex gap-3 flex-wrap">
          <% if(files.length > 0){ %> 
             <% files.forEach(function(val){ %>
          <div class="task w-72  px-3 py-4 bg-zinc-800">
            <h1 class="text-white text-3xl tracking-tighter">
              <%= val %>
            </h1>
            <a class="text-blue-500 inline-block mt-3" href=""> Read More</a>
          </div>
             <% }) %>
          <% } else { %>
          <h3 class="text-zinc-600">No Tasks yet</h3>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
